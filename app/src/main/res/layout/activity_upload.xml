<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.kored.instagramclonefirebase.UploadActivity">

  <EditText
    android:id="@+id/edttext_uploadmessage"
    android:layout_width="214dp"
    android:layout_height="40dp"
    android:ems="10"
    android:hint="Mesaj Yaz"
    android:inputType="textPersonName"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintBottom_creator="1"
    android:layout_marginStart="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/img_uploadimage"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="@+id/img_uploadimage" />
  <Button
    android:id="@+id/btn_upload"
    android:layout_width="128dp"
    android:layout_height="60dp"
    android:layout_marginTop="198dp"
    android:layout_marginEnd="16dp"
    android:onClick="upload"
    android:text="YÃ¼kle"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1" />
  <ImageView
    android:id="@+id/img_uploadimage"
    android:layout_width="75dp"
    android:layout_height="70dp"
    app:srcCompat="@drawable/common_google_signin_btn_icon_dark_disabled"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    android:layout_marginStart="39dp"
    android:layout_marginEnd="40dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="16dp"
    tools:layout_constraintLeft_creator="1"
    android:onClick="choosenimage"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/edttext_uploadmessage" />
</android.support.constraint.ConstraintLayout>
